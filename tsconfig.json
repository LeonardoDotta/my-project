{
    "compilerOptions": {
      "target": "ESNext",                 
      "module": "ESNext",                 
      "strict": true,                     
      "esModuleInterop": true,           
      "skipLibCheck": true,               
      "forceConsistentCasingInFileNames": true, 
      "moduleResolution": "Node",         
      "baseUrl": "./",                   
      "paths": {                          
        "@/*": ["src/*"]
      }
    },
    "include": ["./Pages/**/*"],              
    "exclude": ["node_modules", "dist"]   
  }
  